
import cv2
import numpy as np

# Load pre-trained Haar Cascade / custom trained model for ambulance detection
# For demo: using a car detection cascade as a placeholder
ambulance_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + 'haarcascade_car.xml')

# Open camera (0 for webcam, replace with video file for dataset)
cap = cv2.VideoCapture(0)

while True:
    ret, frame = cap.read()
    if not ret:
        break

    gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)

    # Detect ambulances (cars for demo)
    ambulances = ambulance_cascade.detectMultiScale(gray, 1.1, 4)

    for (x, y, w, h) in ambulances:
        cv2.rectangle(frame, (x, y), (x + w, y + h), (0, 255, 0), 2)
        cv2.putText(frame, "Ambulance Detected", (x, y - 10),
                    cv2.FONT_HERSHEY_SIMPLEX, 0.9, (0, 255, 0), 2)

        # ðŸš¦ Logic: Here you would send a signal to traffic controller (GPIO / IoT)
        print("AMBULANCE DETECTED â†’ Switching Signal to GREEN")

    cv2.imshow("Traffic Camera", frame)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
